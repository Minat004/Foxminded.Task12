@page "/category"
@using FinancialTime.BlazorServerApp.Interfaces
@using FinancialTime.Core.DTOs.FinType
@inject ICategoryClient Client

<PageTitle>Categories</PageTitle>

<h3>Category</h3>
    
@if (typeDtos is null)
{
    <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated" 
             role="progressbar" 
             aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
    </div>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Number</th>
            <th>Name</th>
            <th>Income/Expense</th>
        </tr>
        </thead>
        <tbody>
        @for (var i = 0; i < typeDtos.Count; i++)
        {
            var num = i + 1;
            <tr>
                <td>@num</td>
                <td>@typeDtos[i].Name</td>
                <td>@typeDtos[i].Budget</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private List<FinTypeDto>? typeDtos;

    protected override async Task OnInitializedAsync()
    {
        typeDtos = new List<FinTypeDto>((await Client.GetAllAsync())!);
    }
}